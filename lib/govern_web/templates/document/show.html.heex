<h1>Show Document</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @document.name %>
  </li>

  <li>
    <strong>Link:</strong>
    <%= @document.link %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @document.description %>
  </li>

  <li>
    <strong>Views:</strong>
    <%= @document.views %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.document_path(@conn, :edit, @document) %></span> |
<span><%= link "Back", to: Routes.document_path(@conn, :index) %></span>
